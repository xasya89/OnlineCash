@model OnlineCash.Models.StockTackingModels.StockTackingGruppingModel

<h5>№ @Model.NumDoc от @Model.DateDoc.ToString("dd.MM.yy") магазин @Model.ShopName</h5>
<h6>Сумма система - @Model.SumDb р. Фактическая - @Model.SumFact р. Разница - @Model.SumDiff р.</h6>
@foreach (var group in Model.Groups)
{
    <h6 class="text-center">@group.GroupName</h6>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Система</th>
                <th>Сумма</th>
                <th>Факт</th>
                <th>Сумма</th>
                <th>Разница</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var good in group.Goods)
            {
                <tr>
                    <td>@good.GoodName</td>
                    <td>@good.CountDb</td>
                    <td>@good.SumDb</td>
                    <td>@good.CountFact</td>
                    <td>@good.SumFact</td>
                    <td>@good.SumDiff</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Итог</th>
                <th>@group.SumDb</th>
                <th></th>
                <th>@group.SumFact</th>
                <th>@group.SumDiff</th>
            </tr>
        </tfoot>
    </table>

}
