@model List<OnlineCash.ViewModels.ShopSelected>
<h3>Выберите магазины по которым сформировать ценники</h3>
<form asp-controller="Goods" asp-action="PrintPriceStepGoods" method="post">
    @for(int i=0; i<Model.Count; i++)
            {
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model[i].isSelected" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
            @Model[i].Name
        </label>
        <input type="hidden" asp-for="@Model[i].Id" />
    </div>
            }
    <input type="submit" value="Выбрать" class="btn btn-sm btn-primary" />
</form>